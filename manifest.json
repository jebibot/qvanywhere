{
  "manifest_version": 3,
  "name": "퀵이봤 - SOOP 임베드 도우미",
  "short_name": "퀵이봤",
  "version": "1.0.2",
  "description": "퀵뷰 등 SOOP 로그인을 임베드된 플레이어에서 사용할 수 있도록 합니다.",
  "minimum_chrome_version": "119",
  "browser_specific_settings": {
    "gecko": {
      "id": "quick@mul.live"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "*://*.sooplive.co.kr/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
